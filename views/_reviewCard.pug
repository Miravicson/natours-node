mixin reviewCard(review)
  - const user = review.user;
  .reviews__card
    .reviews__avatar
      img.reviews__avatar-img(src=`/img/users/${user.photo}`, alt=`${user.name}`)
      h6.reviews__user= user.name
    p.reviews__text= review.review
    .reviews__rating
      each star of Array(5).fill(0).map((_,index) => index + 1)
          svg.reviews__star(class=`reviews__star--${star <= review.rating ? 'active' : 'inactive'}`)
            use(xlink:href='/img/icons.svg#icon-star')